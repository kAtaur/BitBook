@using Microsoft.AspNet.Identity
@model BitBookMVCApp.Models.Education

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    string email = User.Identity.GetUserName();
    string name = ViewBag.name; 
}
<br/>
<h3> Add Education Information </h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

      
        <div class="form-group">
            @Html.Label("Titile", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EduTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EduTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Institue", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EduInstitute, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EduInstitute) 
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Passing Year", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EduYear, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EduYear) 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Profile", "Index", "Profile")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

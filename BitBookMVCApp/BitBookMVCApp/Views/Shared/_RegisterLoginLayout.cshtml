<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bitbook</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #3F5C9A; color: white">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/BitbookLogo.jpg" alt="" style="height: 80px" />
                @*@Html.ActionLink("bitbook", "", "", null, new { @class = "navbar-brand" })*@
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                        <li></li>
                        <li></li>
                    <li style="margin: 20px 0px 5px 40px; font-size: 200%; font-family:'Amarnath' "><label>Bitbook</label></li> 
                    </ul>
               
             
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    
    <div class="container body-content" >

        <div style="width: 35%; float: left; margin: 0px 0px 0px 20px; position: absolute">
            <br />
            <br />
            <br />
            <p><h3>BitBook helps you connect and share with the people in your life.</h3></p>
            <br />
            <br />
            <img src="~/Images/BitBookLoginPage.png" alt="" style="width:450px ;height: 220px" />
        </div>

        <br/>
        <br/>
        <br/>
        <div style="width: 60%; float: left;  margin-left: 500px; position: absolute; ">
            @RenderBody()
        </div>
       

        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
    <br />
    <br />
    <br />

<br/><br/><br/><br/><br/><br/>


    <br />
<footer style="text-align: center; clear: both; margin-left: 40%; position: absolute;">
    <p>
        <br/><br/><br/><br/><br/>
        <br /><br /><br /><br /><br />
        &copy; @DateTime.Now.Year - Developed by <b>Simple Coders</b>
    </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
